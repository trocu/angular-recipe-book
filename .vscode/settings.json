{
  // Editor and explorer.
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false,
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "editor.insertSpaces": true,
  "editor.rulers": [150],
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 150,
  "search.exclude": {
    "**/dist": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/www": true
  },
  "window.title": "${folderName}",

  // Consistency.
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,

  // Git.
  "git.ignoreLimitWarning": true,
  "git.inputValidationSubjectLength": 128,

  // JavaScript.
  "html.validate.scripts": false,
  "javascript.suggestionActions.enabled": false,

  // TypeScript.
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.quoteStyle": "single",
  "typescript.tsdk": "node_modules/typescript/lib",

  // This is required for astro to be parsed by eslint.
  "eslint.execArgv": ["--max_old_space_size=16384"],
  "eslint.validate": ["astro", "javascript", "typescript"],

  // TitleBar with different color per repository.
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#000000",
    "titleBar.inactiveBackground": "#000000"
  },

  // TailwindCSS.
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    "styleClass",
    "class:list"
  ],
  "tailwindCSS.experimental.classRegex": ["class ?= ?`(.*)`"],

  // Type-specific.
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "[dockercompose]": {
    "editor.tabSize": 4
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[nginx]": {
    "editor.defaultFormatter": "ahmadalli.vscode-nginx-conf"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[yaml]": {
    "editor.tabSize": 4
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  }
}
